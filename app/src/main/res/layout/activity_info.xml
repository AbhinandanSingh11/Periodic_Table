<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.InfoActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:src="@color/ios_blue"
        android:id="@+id/imageElement"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imageElement"
        app:layout_constraintEnd_toEndOf="@id/imageElement"
        app:layout_constraintTop_toTopOf="@id/imageElement"
        app:layout_constraintBottom_toBottomOf="@id/imageElement"
        android:text="He"
        android:id="@+id/nameElement"
        android:textColor="@color/white"
        android:textSize="35sp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageElement"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/recylerviewValues"
        android:paddingBottom="25dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>